<!-- Low fuel warn
3D instrument for An-2-->
<PropertyList>
 <path>fuel_warn.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>fuel_warn_base</object-name>
  <emission>
    <red-prop>an2/controls/light/int-red</red-prop>
    <green-prop>an2/controls/light/int-green</green-prop>
    <blue-prop>an2/controls/light/int-blue</blue-prop>
  </emission>
</animation>


<animation>
  <type>material</type>
  <object-name>no_fuel</object-name>
 <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>an2/systems/electrical/low-fuel-left</factor-prop>
  </emission>
</animation>
  

</PropertyList>
