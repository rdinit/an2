<!-- Lamp
3D instrument for An-2-->
<PropertyList>
 <path>green_lamp.ac</path>
<!-- External instruments lighting -->
<animation>
  <type>material</type>
  <object-name>lamp_base</object-name>
  <emission>
    <red-prop>an2/controls/light/ext-red</red-prop>
    <green-prop>an2/controls/light/ext-green</green-prop>
    <blue-prop>an2/controls/light/ext-blue</blue-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>lamp</object-name>
 <emission>
    <red>0.0</red>
    <green>0.8</green>
    <blue>0.2</blue>
    <factor-prop>an2/systems/electrical/elev_trim_lamp</factor-prop>
  </emission>
</animation>


<animation>
	<type>pick</type>
	<object-name>lamp</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>property-assign</command>
			<property>controls/flight/elevator-trim</property>
			<value>0.0</value>
		</binding>
	</action>
</animation>


</PropertyList>
