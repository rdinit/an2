<!-- Fast align button for GIK-1 compass
3D instrument for An-2-->
<PropertyList>
 <path>gik_button.ac</path>
<!-- External instruments lighting -->
<animation>
  <type>material</type>
  <object-name>comp_base_1</object-name>
  <object-name>comp_base_2</object-name>
  <emission>
    <red-prop>an2/controls/light/ext-red</red-prop>
    <green-prop>an2/controls/light/ext-green</green-prop>
    <blue-prop>an2/controls/light/ext-blue</blue-prop>
  </emission>
</animation>

<!--UV staff-->
<animation>
 <type>select</type>
 <object-name>comp_base_uv</object-name>
 <condition>
	<property>an2/controls/switches/uv_light</property>
 </condition>
</animation>

<animation>
  <type>material</type>
  <object-name>comp_base_uv</object-name>
 <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>an2/controls/light/uv-bright</factor-prop>
  </emission>
</animation>

<!--Press button animation-->
<animation>
 <type>select</type>
 <object-name>comp_base_1</object-name>
 <condition>
	 <not>
		<property>an2/controls/switches/compass</property>
	</not>
 </condition>
</animation>


<!-- ******************** Pick staff ******************************* -->
<animation>
	<type>pick</type>
	<object-name>hs</object-name>
	<visible>false</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-assign</command>
			<property>an2/controls/switches/compass</property>
			<value>1</value>
		</binding>
		<binding>
			<command>nasal</command>
			<script>
				an2.gik_adjust();
			</script>
		</binding>
		<mod-up>
		<binding>
			<command>property-assign</command>
			<property>an2/controls/switches/compass</property>
			<value>0</value>
		</binding>
		</mod-up>
	</action>
</animation>



</PropertyList>
